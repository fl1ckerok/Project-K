@{
    ViewData["Title"] = "Початкове налаштування";
}

<form method="post" action="/Seed/SeedAdmin">
    <div style="padding-left: 25%; padding-right: 25%; padding-top: 3%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <h6>Крок 1/3</h6>
        <div class="progress" role="progressbar" aria-label="Example 1px high" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100" style="height: 1px">
                <div class="progress-bar" style="width: 33%"></div>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Електронна пошта</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required>
            <div id="emailHelp" class="form-text">За цією поштою буде доступ до профілю</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Пароль</label>
            <input type="password" class="form-control" id="password" required>
        </div>
            <div class="mb-3">
            <label for="passwordConfirm" class="form-label">Повторити пароль</label>
            <input type="passwordConfirm" class="form-control" id="passwordConfirm" required>
        </div>
        <button type="submit" class="btn btn-primary">Далі</button>
    </div>
</form>