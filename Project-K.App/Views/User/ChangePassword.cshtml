@{
    ViewBag.Title = "Зміна паролю";
}
<h2>Зміна паролю для користувача @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="User">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="email" value="@Model.Email" />
    <div class="form-group">
        <label for="OldPassword" class="control-label">Старий пароль</label>
        <input type="password" name="oldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label for="NewPassword" class="control-label">Новий пароль</label>
        <input type="password" name="newPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-dark" />
    </div>
</form>